{
  "name": "hello-world",
  "version": "1.0.0",
  "description": "Minimal Next.js Hello World",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --cache",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,css}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.6",
    "typescript": "^5.8.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "prettier": "^3.4.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{md,json,css}": [
      "prettier --write"
    ]
  }
}
